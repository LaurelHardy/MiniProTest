.category .header {
  padding: 20rpx 0;
}
.category .header .search {
  width: 90%;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  background-color: #ddd;
  border-radius: 4rpx;
  text-align: center;
}
.category .content {
  display: flex;
  height: 800rpx;
  border-top: 2rpx solid #333;
}
.category .content .left {
  width: 20%;
  height: 800rpx;
  border-right: 2rpx solid #333;
}
.category .content .left .navItem {
  position: relative;
  height: 60rpx;
  line-height: 80rpx;
  font-size: 27rpx;
  text-align: center;
}
.category .content .left .navItem.active::before {
  content: "";
  width: 2rpx;
  height: 40rpx;
  background-color: #f00;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
}
.category .content .right {
  width: 80%;
  height: 800rpx;
}

